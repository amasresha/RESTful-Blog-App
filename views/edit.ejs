<% include ./partials/header %>
    <div class="ui main text container segment">
        <div class="ui huge header">Edit
            <%= blog.title %>
        </div>
    </div>
    <form id="form" action="/blogs/<%=blog._id %>?_method=PUT" method="POST">
        <div class="field"><br>
            <label> Title </label> <br>
            <input type="text" name="blog[title]" value="<%= blog.title %>">
        </div>
        <div class="field"> <br>
            <label> Image</label> <br>
            <input type="text" name="blog[image]" value="<%=blog.image %>">
        </div>

        <div class="field"><br>
            <label> Post </label> <br>
            <textarea name="blog[body]"> <%=blog.body %> </textarea>

        </div>

        <input class="ui inverted green button" type="submit">
    </form>
    <% include ./partials/footer %>